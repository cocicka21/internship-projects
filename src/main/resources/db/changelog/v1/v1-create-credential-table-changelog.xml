<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="v1-1" author="Artur Stankevich">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="credentials"/>
            </not>
        </preConditions>
        <createTable tableName="credentials">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>

            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_users_credential_id" baseTableName="users" baseColumnNames="id" referencedTableName="credentials"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>