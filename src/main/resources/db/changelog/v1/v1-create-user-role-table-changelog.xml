<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="v1-1" author="Artur Stankevich">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_role"/>
            </not>
        </preConditions>
        <createTable tableName="user_role">
            <column name="user_id" type="bigint">
                <constraints primaryKey="true" foreignKeyName="user_fk" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints primaryKey="true" foreignKeyName="role_fk" referencedTableName="roles" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>